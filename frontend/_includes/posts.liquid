---js
{
  layout: "base.liquid",
  pagination: {
    data: "collections.postsLive",
    size: 5,
    before: function(paginationData, fullData) {
      return paginationData.filter(post => post.data.tags.includes(fullData.filteringTag));
    }
  }
}
---

<nav class="post-meta">
  Filter by:
  <a href="/posts/blog/" class="category-link tag is-accent">Blogs</a>
  <a href="/posts/news/" class="category-link tag is-accent">News</a> 
  <a href="/posts/tags/" class="tag is-info is-light">Tags</a>
</nav>
